# ============================================
# AGENT FOR EDU - Docker Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Command: cp .env.docker .env

# ============================================
# MySQL Database
# ============================================
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=agentforedu
MYSQL_USER=agentuser
MYSQL_PASSWORD=agent123

# ============================================
# JWT Security
# ============================================
# Generate a secure key (at least 32 characters)
JWT_SECRET=mySecretKey123456789012345678901234567890

# ============================================
# AI Services (Required)
# ============================================
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Groq API for faster inference
# Get from: https://console.groq.com/keys
GROQ_API_KEY=

# Default AI model (gemini or groq)
DEFAULT_AI_MODEL=gemini

# ============================================
# Google OAuth (Optional - for Google services)
# ============================================
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# ============================================
# Encryption Key (for storing OAuth tokens)
# ============================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=
